<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="mb-3 col-md-6 offset-md-3">
            <h1>Edit lodge</h1>
            <form action="/lodges/<%= lodge._id  %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Lodge Name</label>
                    <input class="form-control" type="text" id="name" name="lodge[name]" value="<%=lodge.name %>"
                        required>
                    <div class=" valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="gate">School Gate</label>
                    <select class="form-select" id="gate" name="lodge[schoolGate]" required>
                        <% for (let schoolGate of schoolGates) { %>
                            <option value="<%=schoolGate %>" <%=schoolGate===lodge.schoolGate && "selected" %> >
                                <%= schoolGate %>
                            </option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Pick Location Closer To Your Lodge</label>
                    <select class="form-select" id="location" name="lodge[location]" required>
                        <% for (let location of locations) { %>
                            <option value="<%=location %>" <%=location===lodge.location && "selected" %>>
                                <%= location %>
                            </option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="type">Type of Lodge</label>
                    <select class="form-select" id="type" name="lodge[typeOfLodge]" required>
                        <% for (let lodge of typeOfLodge) { %>
                            <option value="<%=lodge %>" <%=lodge===lodge.typeOfLodge && "selected" %>
                                ><%= lodge %>
                            </option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Lodge Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚¦</span>
                        <input type="text" value="<%= lodge.price %>" class="form-control" id="price" placeholder="0.00"
                            aria-label="price" aria-describedby="price-addon1" name="lodge[price]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="mb-3">
                    <label class="form-label" for="room">Number of Rooms Available</label>
                    <input class="form-control" type="number" id="room" min="1" name="lodge[roomsAvailable]"
                        value=<%=lodge.roomsAvailable %> required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="room">Image</label>
                    <input class="form-control" type="text" name="lodge[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="lodge[description]"
                        required><%=lodge.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div>
                    <button class="btn btn-success">Updata Lodge</button>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </form>
        </div>

    </div>