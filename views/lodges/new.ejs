<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="mb-3 col-md-6 offset-md-3">
            <h1>Make a new lodge</h1>
            <form action="/lodges" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Lodge Name</label>
                    <input class="form-control" type="text" id="name" name="lodge[name]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="gate">School Gate</label>
                    <select class="form-select" id="gate" name="lodge[schoolGate]" required>
                        <% for (let schoolGate of schoolGates) { %>
                            <option value="<%=schoolGate %>">
                                <%= schoolGate %>
                            </option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Pick Location Closer To Your Lodge</label>
                    <select class="form-select" id="location" name="lodge[location]" required>
                        <% for (let location of locations) { %>
                            <option value="<%=location.name %>">
                                <%= location.name %>
                            </option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="type">Type of Lodge</label>
                    <select class="form-select" id="type" name="lodge[typeOfLodge]" required>
                        <% for (let lodge of typeOfLodge) { %>
                            <option value="<%=lodge %>">
                                <%= lodge %>
                            </option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Choose Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Lodge Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚¦</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-addon1" name="lodge[price]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="mb-3">
                    <label class="form-label" for="room">Number of Rooms Available</label>
                    <input class="form-control" type="number" id="room" min="1" name="lodge[roomsAvailable]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="lodge[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div>
                    <button class="btn btn-success">Add Lodge</button>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </form>
        </div>

    </div>