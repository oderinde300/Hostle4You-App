<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/app.css">

    <div id="cluster-map" ></div>

    <h1>Hostels</h1>
    <% for (let lodge of lodges) { %>
        <div class="container">
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= lodge.images[0].index %> " class="img-fluid " alt="<%= lodge.name %> ">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= lodge.name %>
                            </h5>
                            <p class="card-text">
                                <%= lodge.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted text-capitalize">
                                    around <%= lodge.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/lodges/<%=lodge._id%>">View
                                <%=lodge.name%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const lodges = {features: <%- JSON.stringify(lodges) %>}
        </script>

        <script src="/javaScripts/clusterMap.js"></script>